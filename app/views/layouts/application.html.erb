<!DOCTYPE html>
<html>
  <head>
    <title>BlackInATLapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= button_to( "Profile", user_path(:id) )%>
      <%= button_to( "Restaurants", eateries_path )%>
      <%= button_to( "Fave Five", top_five_path )%>
      <%= button_to( "Let's Splurge", expensive_eats_path )%>
      <%= button_to( "Eat on a Dime", cheap_eats_path )%>
      <%= button_to( "Log Out", logout_path )%>
    <% else %>
      <%= button_to( "Sign up", new_user_path)%>
      <%= button_to( "Login", sessions_login_path )%>
      <%= button_to( "Restaurants", eateries_path )%>
      <%= button_to( "Let's Splurge", expensive_eats_path )%>
      <%= button_to( "Eat on a Dime", cheap_eats_path )%>
    <% end %>
    <%= yield %>
  </body>
</html>
